{% extends 'base.html.twig' %}

{% block title %}liste Evénement{% endblock %}

{% block body %}
   <div id="content" class="main-content">
<h1> List des Evénements</h1>
    <div class="layout-px-spacing">
     <div class="row layout-top-spacing">

            <div class="col-xl-8 col-lg-12 col-md-12 col-sm-12 col-12 layout-spacing">
                <div class="widget widget-chart-one">
                    <div class="widget-heading">
                         
                            <table class="table">
                                <tbody>
                                    <tr>
                                        <th>Num°</th>
                                        <td>{{ event.idEvent }}</td>
                                    </tr>
                                    <tr>
                                        <th>Nom Evénement</th>
                                        <td>{{ event.nomEvent }}</td>
                                    </tr>
                                    <tr>
                                        <th>Description</th>
                                        <td>{{ event.descriptionEvent }}</td>
                                    </tr>
                                    <tr>
                                        <th>Status</th>
                                        <td>{{ event.isactive }}</td>
                                    </tr>
                                    <tr>
                                        <th>Date début</th>
                                        <td>{{ event.dateDebEvent ? event.dateDebEvent|date('Y-m-d') : '' }}</td>
                                    </tr>
                                    <tr>
                                        <th>Date Fin</th>
                                        <td>{{ event.dateFinEvent ? event.dateFinEvent|date('Y-m-d') : '' }}</td>
                                    </tr>
                                    <tr>
                                        <th>Categorie</th>
                                        <td>{{ event.categoriee }}</td>
                                    </tr>
                                    <tr>
                                        <th>Image </th>
                                        <td><img src="{{ asset('img/' ~ event.imageevent) }}" alt="//"></td>
                                    </tr>
                                    <tr>
                                        <th>nbr de participant </th>
                                        <td>{{ event.nbrParticipant }}</td>
                                    </tr>
                                </tbody>
                            </table>

                            {{ include('event/_delete_form.html.twig') }}
                            </div>
                </div>
                
                            <a href="{{ path('event_index') }}"class="btn btn-primary ml-3 mt-3">List Event</a>

                            <a href="{{ path('event_edit', {'idEvent': event.idEvent}) }}" class="btn btn-primary ml-3 mt-3">Modifier</a>

            </div>
            
        </div>
    </div>
</div>
{% endblock %}
