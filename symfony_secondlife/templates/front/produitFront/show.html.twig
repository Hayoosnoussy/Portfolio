{% extends 'BaseFront.html.twig' %}
{% block title %}Produit{% endblock %}

{% block body %}



    <div class="container">
        <h2>Produits</h2>
        <div class="row">
            <div class="col-md-3">
                <div class="sidebar">



                    <h4>Categories</h4>
                       <ul class="categories">
                        <li><a href="{{ path('produitFront_index') }}"><i class="fa fa-angle-right"></i>All</a></li>

                           {% for categorie in categories %}
                               <li><a href="{{ path('ProduitCat', {'id': categorie.id}) }}"><i class="fa fa-angle-right"></i>{{ categorie.Description }}</a></li>
                           {% endfor %}
                       </ul>




                </div>
            </div>
            <div class="col-md-9">

                <div class="store-single-picture">

                    <figure><img id="img-single-store" src="/imagez/{{ produit.Image }}" data-zoom-image="/imagez/{{ produit.Image }}" alt="//"></figure>
                    <div id="owl-store-single" class="owl-store-single owl-carousel owl-theme" style="opacity: 1; display: block;">
                        <div class="owl-wrapper-outer">
                            <div class="owl-wrapper" style="width: 1096px; left: 0px; display: block;">
                                <div class="owl-item" style="width: 137px;"><a href="#" data-image="img/store/item-single01.jpg" data-zoom-image="img/store/item-single01.jpg">
                                        <figure></figure></a>
                                </div>
                            </div>
                        </div>
                        <div class="owl-controls clickable">

                        </div>
                    </div>
                </div>
                <div class="store-single-details">
                    <h2>{{  produit.NomProduit  }}</h2>
                    <div class="price"><strong>{{ produit.Prix }} DT</strong>

                    </div>
                    <h4>Description :</h4>
                    <p>{{ produit.Description|raw }}</p>

                    <form action="#">
                        <div class="form-group">
                            <label for="store-item-size"><strong>Quantité:</strong> </label>
                            <p>{{  produit.Quantite  }} pièces </p>
                        </div>
                        <div class="form-group">
                            <label for="store-item-color"><strong>Catégorie:</strong> </label>
                            <p>{{  produit.Categories }}</p>
                        </div>

                        <div class="clearfix"></div>
                    </form>
                </div>

            </div>

            {{ form_start(form5)}}
            {{ form_widget(form5) }}
            {{ form_end(form5) }}

            <br/><br/><br/><br/><br/>
            <div class="col-md-9">
                <div class="news-single-item">


                </div>
            </div>
        </div>
    </div>


{% endblock %}
