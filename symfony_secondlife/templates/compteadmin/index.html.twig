                <td>
                    <a href="{{ path('compteadmin_edit', {'idcompteadmin': compteadmin.idcompteadmin}) }}"class="btn btn-primary mb-2">edit</a>
                </td>

                <td>
                    {{ include('compteadmin/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
