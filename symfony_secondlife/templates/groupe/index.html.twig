{% extends 'BaseBack.html.twig' %}


{% block body %}




    <div id="content" class="main-content">
        <div class="layout-px-spacing">
            <div class="row layout-top-spacing">
                <br>
                <br>
                <br>

                <div class="col-xl-8 col-lg-12 col-md-12 col-sm-12 col-12 layout-spacing">
                    <div class="widget widget-chart-one">
                        <div class="widget-heading">

                            <table class="table">


                                <thead>
                                <tr>
                                    <th>Idclass</th>
                                    <th>Nomclass</th>
                                    <th>Typeclass</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for groupe in groupes %}
                                    <tr>
                                        <td>{{ groupe.idclass }}</td>
                                        <td>{{ groupe.nomclass }}</td>
                                        <td>{{ groupe.typeclass }}</td>
                                        <td>
                                            <a href="{{ path('groupe_show', {'idclass': groupe.idclass}) }}"
                                               class="btn btn-primary ml-3 mt-3">Afficher</a>
                                            <a href="{{ path('groupe_edit', {'idclass': groupe.idclass}) }}"
                                               class="btn btn-primary ml-3 mt-3">Modifier</a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="4">Pas de classes pour le moment</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>

                        </div>
                    </div>


                    <a href="{{ path('groupe_new') }}" class="btn btn-primary ml-3 mt-3">Ajouter une classe</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
