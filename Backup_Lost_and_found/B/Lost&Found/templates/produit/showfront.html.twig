{% extends 'pro.html.twig' %}

{% block body %}
    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top header-inner-pages">
        <div class="container d-flex align-items-center">

            <h1 class="logo me-auto"><a href={{ path('home') }}>Lost <img src="{{ asset('lastone/assets/img/logo.png')}}" alt="" class="img-fluid"> Found</a></h1>

            <!-- Uncomment below if you prefer to use an image logo -->
            <!-- <a href="index.html" class="logo me-auto"><img src="assets/img/logo.png" alt="" class="img-fluid"></a>-->

            <nav id="navbar" class="navbar">
                <ul>
                    <li><a class="nav-link scrollto active" href={{ path('home') }}>Home</a></li>



                    {% if app.user %}
                        {% if app.user.role == "admin" %}
                            <li><a class="nav-link   scrollto" href={{ path('personne_index') }}>User Management</a></li>
                            <li><a class="nav-link   scrollto" href={{ path('produit_index') }}>Archive</a></li>
                            <li><a class="nav-link   scrollto" href={{asset("chat")}}>Chat Room</a></li>
                        {% elseif app.user.role == 'User' %}
                            <li><a class="nav-link   scrollto" href={{asset("chat")}}>Chat Room</a></li>
                            <li><a class="nav-link   scrollto" href={{ path('produit_new') }}>I Lost | Found</a></li>
                            <li><a class="nav-link   scrollto" href={{ path('produit_index2') }}>My Lost | Found</a></li>
                        {% endif %}

                        <li class="dropdown"><a href=""><img src="{{ asset('uploads/images/' ~ app.user.photo) }}" alt="mdo" width="30" height="30" class="rounded-circle"><i class="bi bi-chevron-down"></i></a>
                            <ul>
                                <li><a href={{ path('personne_profil') }}>Profil</a></li>
                                <li><a href={{ path('app_logout') }}>Logout</a></li>

                            </ul>
                        </li>
                    {% endif %}
                    {% if not app.user %}
                        <li><a class="nav-link scrollto" href="#contact">Contact</a></li>
                        <li><a class="getstarted scrollto" href={{ ("/login") }}>Get Started</a></li>
                    {% endif %}
                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar -->

        </div>
    </header><!-- End Header -->



    <main id="main">

        <!-- ======= Breadcrumbs ======= -->
        <section id="breadcrumbs" class="breadcrumbs">
            <div class="container">
                <br>
                <ol>
                    <li><a href={{ path('home') }}>Home</a></li>
                    <li>Example of lost nd found</li>
                </ol>
                <h2>What it can be lost nd found</h2>

            </div>
        </section><!-- End Breadcrumbs -->

        <!-- ======= Portfolio Details Section ======= -->
        <section id="portfolio-details" class="portfolio-details">
            <div class="container">

                <div class="row gy-4">

                    <div class="col-lg-8">
                        <div class="portfolio-details-slider swiper">
                            <div class="swiper-wrapper align-items-center">
                                {% if produit.photo =='' %}
                                <div class="swiper-slide">
                                    <img src="{{ asset('lastone/assets/img/introuvable.png')}}"  alt="">
                                </div>
                                {% else %}
                                <div class="swiper-slide">
                                    <img src="{{ asset('uploads/images/' ~ produit.photo) }}"  alt="">
                                </div>
                                {% endif %}

                                <div class="swiper-slide">
                                    <img src="{{ asset('lastone/assets/img/introuvable.png')}}"  alt="">
                                </div>



                            </div>
                            <div class="swiper-pagination"></div>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="portfolio-info">
                            <h3>Your {{ produit.Status }} information</h3>
                            <ul>

                                <li><strong>Status</strong>: {{ produit.Status }}</li>
                                <li><strong>Where?</strong>: {{ produit.Adress }}</li>
                                <li><strong>Category</strong>: {{ produit.Categorie }}</li>
                                <li><strong>Seconde Category</strong>: {{ produit.SecCategorie }}</li>
                                <li><strong>Type of card</strong>: {{ produit.CarteType }} </li>
                                <li><strong>Bank</strong>: {{ produit.Bank }} </li>
                                <li><strong>Whene?</strong>: {{ produit.Date ? produit.Date|date('Y-m-d H:i:s') : '' }} </li>
                                <li><strong>Owner</strong>: {{ produit.ownerName }} {{ produit.ownerLn }} </li>
                                <li><strong>Brand</strong>: {{ produit.marque }}</li>
                                <li><strong>Color</strong>: {{ produit.coleur }}</li>
                                <li><strong>Supplementary Adress</strong>: {{ produit.adressSupp }}</li>
                                <li><strong>Nationality</strong>: {{ produit.nationalite }}</li>
                                <li><strong>Object Status</strong>: {{ produit.objetStatus }}</li>
                                <li><strong>Question?</strong>: {{ produit.questionSupp }}</li>
                                <li><strong>Pet's name</strong>: {{ produit.nomObjet }}</li>
                                <li><strong>Details</strong>: {{ produit.details }}</li>
                            </ul>
                        </div>
                        <div class="portfolio-description">
                            <h2>THOSE ARE THE DETAILS OF YOUR {{ produit.Status }}</h2>
                        </div>

                    </div>

                </div>

            </div>
        </section><!-- End Portfolio Details Section -->

    </main><!-- End #main -->

{% endblock %}